{
	"info": {
		"_postman_id": "manager-performance-reviews-api",
		"name": "Manager Performance Reviews API",
		"description": "Comprehensive API collection for Manager Performance Review system including team management, promotion recommendations, succession planning, and career path assignments.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set base URL if not already set",
					"if (!pm.variables.get('base_url')) {",
					"    pm.variables.set('base_url', 'http://localhost:8000');",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "your-bearer-token-here",
			"type": "string"
		},
		{
			"key": "cycle_id",
			"value": "1",
			"type": "string"
		},
		{
			"key": "employee_id",
			"value": "1",
			"type": "string"
		},
		{
			"key": "promotion_id",
			"value": "1",
			"type": "string"
		},
		{
			"key": "role_id",
			"value": "1",
			"type": "string"
		},
		{
			"key": "learning_path_id",
			"value": "1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Team Review Management",
			"item": [
				{
					"name": "Get Review Cycles",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/manager/team-reviews/cycles?scope=ongoing&limit=25",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "manager", "team-reviews", "cycles"],
							"query": [
								{
									"key": "scope",
									"value": "ongoing",
									"description": "Filter by scope: ongoing, completed, draft"
								},
								{
									"key": "limit",
									"value": "25",
									"description": "Number of results to return (max 100)"
								},
								{
									"key": "cursor",
									"value": "",
									"description": "Pagination cursor",
									"disabled": true
								}
							]
						},
						"description": "Get review cycles where manager has reviewees with completion statistics and team headcount."
					},
					"response": []
				},
				{
					"name": "Get Cycle Reviewees",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/manager/team-reviews/cycles/{{cycle_id}}/reviewees?sort=progress&limit=25",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "manager", "team-reviews", "cycles", "{{cycle_id}}", "reviewees"],
							"query": [
								{
									"key": "search",
									"value": "",
									"description": "Search by employee name or email",
									"disabled": true
								},
								{
									"key": "sort",
									"value": "progress",
									"description": "Sort by: progress, final_score, created_at"
								},
								{
									"key": "limit",
									"value": "25",
									"description": "Number of results to return (max 100)"
								},
								{
									"key": "cursor",
									"value": "",
									"description": "Pagination cursor",
									"disabled": true
								}
							]
						},
						"description": "Get reviewees for a specific cycle with performance data, badges, and completion status."
					},
					"response": []
				},
				{
					"name": "Send Reminders",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"audience\": \"all\",\n    \"reviewee_ids\": [1, 2, 3]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/manager/team-reviews/cycles/{{cycle_id}}/reminders",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "manager", "team-reviews", "cycles", "{{cycle_id}}", "reminders"]
						},
						"description": "Send targeted reminders to reviewers. Rate limited to once per 4 hours per cycle."
					},
					"response": []
				},
				{
					"name": "Get Team Summary",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/manager/team-reviews/team-summary?cycle_id={{cycle_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "manager", "team-reviews", "team-summary"],
							"query": [
								{
									"key": "cycle_id",
									"value": "{{cycle_id}}",
									"description": "Optional cycle ID for specific cycle stats"
								}
							]
						},
						"description": "Get team performance analytics including completion rates, average scores, and high performer percentages."
					},
					"response": []
				},
				{
					"name": "Get Team Members",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/manager/team-reviews/team-members?cycle_id={{cycle_id}}&limit=25",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "manager", "team-reviews", "team-members"],
							"query": [
								{
									"key": "cycle_id",
									"value": "{{cycle_id}}",
									"description": "Optional cycle ID for performance data"
								},
								{
									"key": "filter[status]",
									"value": "",
									"description": "Filter by badge status",
									"disabled": true
								},
								{
									"key": "limit",
									"value": "25",
									"description": "Number of results to return (max 100)"
								},
								{
									"key": "cursor",
									"value": "",
									"description": "Pagination cursor",
									"disabled": true
								}
							]
						},
						"description": "Get team members with their performance data and AI-generated badges."
					},
					"response": []
				}
			],
			"description": "Team review management endpoints for tracking cycles, reviewees, and sending reminders."
		},
		{
			"name": "Promotion Recommendations",
			"item": [
				{
					"name": "Create Promotion Recommendation",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"employee_user_id\": {{employee_id}},\n    \"target_role_id\": {{role_id}},\n    \"justification\": \"Employee has consistently exceeded expectations and demonstrated strong leadership capabilities. Ready for next level responsibilities.\",\n    \"cycle_id\": {{cycle_id}},\n    \"comp_adjustment_min\": 5000,\n    \"comp_adjustment_max\": 8000,\n    \"workflow_id\": \"standard_promotion\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/manager/promotions",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "manager", "promotions"]
						},
						"description": "Create a new promotion recommendation for a team member with detailed justification and compensation adjustments."
					},
					"response": []
				},
				{
					"name": "Get Promotion Recommendations",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/manager/promotions?status=pending&limit=25",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "manager", "promotions"],
							"query": [
								{
									"key": "status",
									"value": "pending",
									"description": "Filter by status: pending, approved, rejected, withdrawn"
								},
								{
									"key": "limit",
									"value": "25",
									"description": "Number of results to return (max 100)"
								},
								{
									"key": "cursor",
									"value": "",
									"description": "Pagination cursor",
									"disabled": true
								}
							]
						},
						"description": "Get all promotion recommendations created by the manager with status tracking and approval details."
					},
					"response": []
				},
				{
					"name": "Withdraw Promotion Recommendation",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"action\": \"withdraw\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/manager/promotions/{{promotion_id}}/withdraw",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "manager", "promotions", "{{promotion_id}}", "withdraw"]
						},
						"description": "Withdraw a pending promotion recommendation. Only allowed for pending recommendations that haven't been approved yet."
					},
					"response": []
				}
			],
			"description": "Promotion recommendation management for creating, tracking, and withdrawing promotion proposals."
		},
