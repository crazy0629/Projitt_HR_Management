{
  "info": {
    "_postman_id": "8dc83bcc-86cb-4401-a14a-81cfd4509204",
    "name": "Manager Performance Reviews (Employee)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "41082104",
    "description": "Manager-facing performance review tools for team management and talent actions"
  },
  "item": [
    {
      "name": "Team Review Management",
      "item": [
        {
          "name": "Get Review Cycles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/manager/team-reviews/cycles?scope=ongoing&limit=25",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "manager",
                "team-reviews",
                "cycles"
              ],
              "query": [
                {
                  "key": "scope",
                  "value": "ongoing",
                  "description": "Filter by scope: ongoing, completed, draft"
                },
                {
                  "key": "limit",
                  "value": "25",
                  "description": "Number of results to return (max 100)"
                }
              ]
            },
            "description": "Get cycles where manager has reviewees with completion stats and team headcount"
          },
          "response": []
        },
        {
          "name": "Get Cycle Reviewees",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/manager/team-reviews/cycles/{{cycle_id}}/reviewees?limit=25",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "manager",
                "team-reviews",
                "cycles",
                "{{cycle_id}}",
                "reviewees"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "25",
                  "description": "Number of results to return"
                }
              ]
            },
            "description": "Get reviewees for a specific cycle with AI-powered badge classification"
          },
          "response": []
        },
        {
          "name": "Send Review Reminders",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"audience\": \"all\",\n    \"reviewee_ids\": [1, 2, 3]\n}"
            },
            "url": {
              "raw": "{{base_url}}/manager/team-reviews/cycles/{{cycle_id}}/reminders",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "manager",
                "team-reviews",
                "cycles",
                "{{cycle_id}}",
                "reminders"
              ]
            },
            "description": "Send targeted reminders to reviewers (rate limited to once per 4 hours)"
          },
          "response": []
        },
        {
          "name": "Get Team Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/manager/team-reviews/team-summary?cycle_id={{cycle_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "manager",
                "team-reviews",
                "team-summary"
              ],
              "query": [
                {
                  "key": "cycle_id",
                  "value": "{{cycle_id}}",
                  "description": "Optional cycle ID for specific cycle data"
                }
              ]
            },
            "description": "Get team performance summary with completion statistics and high performer percentages"
          },
          "response": []
        },
        {
          "name": "Get Team Members",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/manager/team-reviews/team-members?cycle_id={{cycle_id}}&limit=25",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "manager",
                "team-reviews",
                "team-members"
              ],
              "query": [
                {
                  "key": "cycle_id",
                  "value": "{{cycle_id}}",
                  "description": "Filter by specific cycle"
                },
                {
                  "key": "limit",
                  "value": "25",
                  "description": "Number of results to return"
                }
              ]
            },
            "description": "Get team members with performance data and AI-powered badge classification"
          },
          "response": []
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
