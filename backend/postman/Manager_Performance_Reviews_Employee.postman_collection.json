      "script": {
        "type": "text/javascript",
        "requests": {},
        "exec": [
          "const token = pm.environment.get('auth_token');",
          "",
          "if (token) {",
          "    pm.variables.set('auth_token', token);",
          "    console.log(\"\u2705 Using updated auth token:\", token);",
          "} else {",
          "    console.warn(\"\u26a0\ufe0f No stored token found!\");",
          "}",
