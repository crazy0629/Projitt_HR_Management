# ==============================================
# Projitt HR Management - Environment Template
# ==============================================
# Copy this file to .env and configure your local environment
# Replace masked values (****) with your actual credentials

# Application Settings
APP_NAME="Projitt HR Management"
APP_ENV=local
APP_KEY=****
APP_DEBUG=true
APP_URL=http://localhost:8000
MEDIA_BASE_URL=http://localhost:8000/

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Configuration (MySQL Local)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=hrm_local
DB_USERNAME=root
DB_PASSWORD=****

# Cache & Session Storage (File-based for local development)
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
FILESYSTEM_DISK=local

# Queue Configuration (Sync for local development)
QUEUE_CONNECTION=sync

# Broadcasting (Log-based for development)
BROADCAST_DRIVER=log

# Mail Configuration (Log-based - emails appear in laravel.log)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@projitt.local"
MAIL_FROM_NAME="${APP_NAME}"

# Laravel Sanctum (API Authentication)
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# Vite Configuration (Frontend Development)
VITE_APP_NAME="${APP_NAME}"

# ==============================================
# Setup Instructions:
# ==============================================
# 1. Copy this file: cp .env.example .env
# 2. Generate app key: php artisan key:generate
# 3. Create database: CREATE DATABASE hrm_local;
# 4. Run migrations: php artisan migrate
# 5. Seed database: php artisan db:seed
# 6. Start server: composer run dev
# ==============================================#